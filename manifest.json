{
    "name":"EMU Print Center",
    "description":"EMU Print Center checkout and management system",
    "version":"1",
    "manifest_version":2,
    "background": {
      "page": "/background.html",
      "persistent": true
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://unpkg.com https://www.gstatic.com https://cdn.firebase.com https://*.firebaseio.com https://*.firebaseio.com; object-src 'self'",

    "content_scripts": [
        {
          "matches": ["https://ebill.emich.edu/C20704_ustores/*"],
          "js": ["js/inject.js"],
          "css": ["css/inject.css"],
          "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        "/inject-toolbar.html"
    ],
    "browser_action": {
        "default_popup": "/popup.html",
        "default_icon": "/img/icon.png"
    },
    "permissions": [
      "tabs",
      "cookies",
      "*://ebill.emich.edu/*"
    ]
}
